<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMemberWindow">

    <EditText
        android:id="@+id/memberNameEditText"
        android:layout_width="637dp"
        android:layout_height="72dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/membershipTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="48dp"
        android:text="Membership Type"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memberNameEditText" />

    <RadioGroup
        android:id="@+id/membershipRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/membershipTypeTextView">

        <RadioButton
            android:id="@+id/individualRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Individual"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="217dp" />


        <RadioButton
            android:id="@+id/familyRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="249dp" />

        <RadioButton
            android:id="@+id/volunteerRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volunteer"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="185dp" />

        <RadioButton
            android:id="@+id/coworkRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoWorkspace"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="345dp" />

        <RadioButton
            android:id="@+id/kitchenRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitchen Renter"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="377dp" />

        <RadioButton
            android:id="@+id/libraryRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library Pass"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="281dp" />

        <RadioButton
            android:id="@+id/nwcStudentRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NWC Student"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="313dp" />

    </RadioGroup>

    <Button
        android:id="@+id/createMemberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="176dp"
        android:text="Create Member"
        app:layout_constraintStart_toEndOf="@+id/membershipRadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/memberNameEditText" />

</android.support.constraint.ConstraintLayout>