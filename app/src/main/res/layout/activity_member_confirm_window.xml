<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginWindows.MemberConfirmWindow">

    <TextView
        android:id="@+id/confirmationViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="72dp"
        android:text="Is This You?"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameConfirmTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:text="Name:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmationViewText" />

    <TextView
        android:id="@+id/nameConfirmViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="152dp"
        android:text="Name"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/nameConfirmTextLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/membershipConfirmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:text="Membership Type:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameConfirmTextLabel" />

    <TextView
        android:id="@+id/membershipViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Membership"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/membershipConfirmLabel"
        app:layout_constraintTop_toBottomOf="@+id/nameConfirmViewText" />

    <TextView
        android:id="@+id/punchesRemainingTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:text="TextView:"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/membershipConfirmLabel" />

    <TextView
        android:id="@+id/punchesRemainingViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="40dp"
        android:text="Punches"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/punchesRemainingTextLabel"
        app:layout_constraintTop_toBottomOf="@+id/membershipViewText" />

    <Button
        android:id="@+id/yesConfirmButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="132dp"
        android:layout_marginStart="108dp"
        android:text="Yes"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/noConfirmButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="132dp"
        android:layout_marginStart="56dp"
        android:text="No"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yesConfirmButton" />

    <Button
        android:id="@+id/updateConfirmButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="132dp"
        android:layout_marginStart="56dp"
        android:text="Needs Updating"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/noConfirmButton" />

</android.support.constraint.ConstraintLayout>