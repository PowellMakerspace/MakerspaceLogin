<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginWindows.UpdateWindow">

    <TextView
        android:id="@+id/PleaseUpdateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:text="Please Update Your Information"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameUpdateTextView"
        android:layout_width="85dp"
        android:layout_height="42dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="52dp"
        android:text="Name:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PleaseUpdateTextView" />

    <EditText
        android:id="@+id/nameUpdateEditText"
        android:layout_width="387dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/nameUpdateTextView"
        app:layout_constraintTop_toBottomOf="@+id/PleaseUpdateTextView" />

    <TextView
        android:id="@+id/membershipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="40dp"
        android:text="MembershipType"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameUpdateTextView" />

    <RadioGroup
        android:id="@+id/updateMembershipRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/membershipTextView">

        <RadioButton
            android:id="@+id/individualRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Individual" />

        <RadioButton
            android:id="@+id/familyRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Family" />

        <RadioButton
            android:id="@+id/volunteerRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Volunteer" />

        <RadioButton
            android:id="@+id/coWorkspaceRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CoWorkspace" />

        <RadioButton
            android:id="@+id/kitchenRenterRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kitchen Renter" />

        <RadioButton
            android:id="@+id/libraryPassRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Library Pass" />

        <RadioButton
            android:id="@+id/nwcStudentRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NWC Student" />

        <RadioButton
            android:id="@+id/nonMemberRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NonMember" />
    </RadioGroup>

    <Button
        android:id="@+id/updateMemberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="256dp"
        android:layout_marginTop="220dp"
        android:text="Update"
        app:layout_constraintStart_toEndOf="@+id/updateMembershipRadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/nameUpdateEditText" />
</android.support.constraint.ConstraintLayout>