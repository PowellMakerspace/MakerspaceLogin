<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="generalinfo.powellmakerspace.org.makerspacelogin">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- To export the sqlite database in order to back up the data -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/application_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainApplication.WelcomeWindow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginWindows.LoginMethodWindow" />
        <!-- <activity android:name=".LoginWindows.QRCodeWindow" /> -->
        <activity android:name=".LoginWindows.LoginSearchWindow" />
        <activity android:name=".LoginWindows.MemberConfirmWindow" />
        <activity android:name=".LoginWindows.ArrivingWindow" />
        <activity android:name=".LoginWindows.NewMemberWindow" />
        <activity android:name=".LoginWindows.SurveyWindow" />
        <activity android:name=".LoginWindows.PurposeWindow" />
        <activity android:name=".LoginWindows.UpdateWindow" />
        <activity android:name=".LogoutWindows.LeavingVisitWindow" />
        <activity android:name=".LogoutWindows.LeavingVisitConfirmWindow" />
        <activity android:name=".LoginWindows.TourWindow" />
        <activity android:name=".LogoutWindows.LeavingTypeWindow" />
        <activity android:name=".LogoutWindows.LeavingTourWindow" />
        <activity android:name=".LogoutWindows.LeavingTourConfirmWindow" />
        <activity android:name=".AdminWindows.AdminLogin" />
        <activity android:name=".AdminWindows.AdminMenu" />
        <activity android:name=".AdminWindows.AdminAddPunch" />
        <activity
            android:name=".AdminWindows.VisitDelete"
            android:label="@string/title_activity_visit_delete"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AdminWindows.reportWindows.preReportPreview"></activity>
    </application>

</manifest>